# TeamHunt Monorepo Environment Configuration
# Copy this file to .env.local and fill in your actual values
# DO NOT commit actual secrets to the repository

# Application URLs (used by E2E tests and development)
APP_BASE_URL=http://localhost:3001
LANDING_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8888
EMAIL_BASE_URL=http://localhost:8889
MEDIA_BASE_URL=http://localhost:8890

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=service_role

# Next.js Client-side Supabase (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Legacy Database Support
DATABASE_URL=postgresql://user:password@host:port/database

# Authentication
JWT_SECRET=your-jwt-secret-key

# External Services
EMAIL_API_KEY=your-email-service-api-key
MEDIA_BUCKET=your-media-storage-bucket

# Documentation Search (Algolia)
ALGOLIA_APP_ID=
ALGOLIA_SEARCH_KEY=
ALGOLIA_INDEX=

# Deployment (optional)
# VERCEL_TOKEN=your-vercel-token
# NETLIFY_AUTH_TOKEN=your-netlify-token